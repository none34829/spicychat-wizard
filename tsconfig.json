{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "jsx": "react-jsx",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "noImplicitAny": true,
      "strictNullChecks": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }